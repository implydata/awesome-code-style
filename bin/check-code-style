#!/usr/bin/env node

const yargs = require('yargs');

const argv = yargs
  .option('strict', {
    alias: 's',
    default: false
  })

  .option('all', {
    alias: 'a',
    default: false
  })

  .help('h')
  .alias('h', 'help')

  .argv;

const { check } = require('../dist/index.js');

check(argv.all, argv.strict);
